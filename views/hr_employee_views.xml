<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_inherit_biometric" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.biometric</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Biometric Device" groups="hr.group_hr_user">
                    <group>
                        <field name="zk_device_id"/>
                        <field name="biometric_device_ip"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>