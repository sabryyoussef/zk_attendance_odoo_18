<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_zk_api_list" model="ir.ui.view">
        <field name="name">zk.api.list</field>
        <field name="model">zk.api.model</field>
        <field name="arch" type="xml">
            <list string="ZK API Configurations">
                <field name="name"/>
                <field name="base_url"/>
                <field name="endpoint"/>
                <field name="api_key" password="True"/>
                <field name="external_data"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_zk_api_form" model="ir.ui.view">
        <field name="name">zk.api.form</field>
        <field name="model">zk.api.model</field>
        <field name="arch" type="xml">
            <form string="ZK API Configuration">
                <header>
                    <button name="fetch_external_data" 
                            string="Fetch Data" 
                            type="object" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                 <!-- Added stat button for connected machines -->
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="object" 
                            name="action_view_machines" icon="fa-server">
                        <field name="machine_count" string="Connected Devices" widget="statinfo"/>
                    </button>
                </div>
                
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Office Main Gate"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="base_url" 
                                   placeholder="e.g., http://192.168.1.100"/>
                            <field name="endpoint" 
                                   placeholder="e.g., /api/attendance"/>
                        </group>
                        <group>
                            <label for="api_key"/>
                            <div class="d-flex">
                                <field name="api_key" password="True" class="me-2"/>
                                <button name="action_show_api_key" 
                                        type="object" 
                                        string="Show Key" 
                                        class="btn btn-secondary"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="External Data" name="external_data">
                            <group>
                                <field name="external_data" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_zk_api_search" model="ir.ui.view">
        <field name="name">zk.api.search</field>
        <field name="model">zk.api.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="base_url"/>
                <field name="endpoint"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_zk_api" model="ir.actions.act_window">
        <field name="name">ZK API Configurations</field>
        <field name="res_model">zk.api.model</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_zk_api_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first ZK API configuration
            </p>
            <p>
                Configure the API connection details for your ZKTeco devices.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem 
        id="menu_zk_api"
        name="ZK API Configurations"
        parent="zk_machine_menu"
        action="action_zk_api"
        sequence="30"/>
</odoo>